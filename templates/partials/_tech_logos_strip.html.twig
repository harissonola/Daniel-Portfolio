<div class="w-full overflow-hidden bg-primary-light/20 py-10 border-y border-white/5 relative group">
    <div class="flex flex-col items-center mb-8 relative z-10">
        <span class="text-[10px] uppercase tracking-[0.3em] font-black text-accent mb-2">Technologies Maîtrisées</span>
        <div class="h-px w-20 bg-accent/30"></div>
    </div>
    
    <!-- Gradient Masks for Premium Feel -->
    <div class="absolute left-0 top-0 bottom-0 w-20 bg-gradient-to-r from-[#0a192f] to-transparent z-10 pointer-events-none"></div>
    <div class="absolute right-0 top-0 bottom-0 w-20 bg-gradient-to-l from-[#0a192f] to-transparent z-10 pointer-events-none"></div>

    <div class="flex animate-scroll whitespace-nowrap items-center hover:pause-animation">
        {% set logos = ['php.png', 'symfony.png', 'js.png', 'html.png', 'css.png', 'flutter.png', 'dart.png', 'bootstrap.png'] %}
        
        {# Triple duplication for smooth infinite scroll #}
        {% for i in 1..3 %}
            <div class="flex gap-12 md:gap-24 px-6 md:px-12 shrink-0">
                {% for logo in logos %}
                    <div class="w-24 h-24 md:w-32 md:h-32 grayscale hover:grayscale-0 opacity-40 hover:opacity-100 transition-all duration-500 flex items-center justify-center transform hover:scale-110">
                        <img src="{{ asset('logos/' ~ logo) }}" alt="{{ logo|replace({'.png': ''})|upper }}" class="max-w-full max-h-full object-contain filter drop-shadow-[0_0_8px_rgba(255,255,255,0.2)]">
                    </div>
                {% endfor %}
            </div>
        {% endfor %}
    </div>
</div>

<style>
@keyframes scroll {
    0% { transform: translateX(0); }
    100% { transform: translateX(-33.33%); } /* Move only 1/3 since we have 3 sets */
}

.animate-scroll {
    animation: scroll 30s linear infinite;
    width: max-content; /* Ensure container fits all items */
}

/* Pause animation on hover for better UX */
.hover\:pause-animation:hover {
    animation-play-state: paused;
}
</style>
